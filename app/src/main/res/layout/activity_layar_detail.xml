<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layardetail"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".LayarDetail">
    <TextView
        android:id="@+id/tvIdTransaksi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Transaksi : "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvIdUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id User : "
        android:layout_below="@id/tvIdTransaksi2"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvTanggalOrder2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Order : "
        android:layout_below="@id/tvIdUser2"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvIdAlat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Alat : "
        android:layout_below="@id/tvTanggalOrder2"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edtIdTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="id transaksi"
        android:layout_toRightOf="@+id/tvIdTransaksi2"
        android:layout_alignBaseline="@+id/tvIdTransaksi2"/>
    <EditText
        android:id="@+id/edtIdUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="id user"
        android:layout_alignBaseline="@+id/tvIdUser2"
        android:layout_alignLeft="@+id/edtIdTransaksi"/>

    <EditText
        android:id="@+id/edtTanggalOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tanggal Order"
        android:layout_alignBaseline="@+id/tvTanggalOrder2"
        android:layout_alignLeft="@+id/edtIdTransaksi"
        android:inputType="date"/>
    <EditText
        android:id="@+id/edtIdAlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id Alat"
        android:layout_alignBaseline="@+id/tvIdAlat2"
        android:layout_alignLeft="@+id/edtIdTransaksi"/>
    <LinearLayout
        android:id="@+id/Linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvIdAlat2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btInsert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert"
            />
        <Button
            android:id="@+id/btUpdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/btDelete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan Muncul disini"
        android:layout_below="@+id/Linearlayout2"
        android:textSize="20sp"
        android:inputType="textMultiLine"/>
</RelativeLayout>
